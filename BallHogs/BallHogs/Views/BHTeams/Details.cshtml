@model BallHogs.Models.BHTeam

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BHTeam</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ManagerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManagerName)
        </dd>
    </dl>
    <h5>Players</h5>
    @if (Model.Players != null)
    {
        <dl class="row">
            @foreach (var player in Model.Players)
            {
                <dd class="col-sm-10">
                    @player.Datum.First_name
                </dd>
                <dd class="col-sm-10">
                    @player.Datum.Last_name
                </dd>
                <dd class="col-sm-10">
                    @player.Datum.Position
                </dd>
            }
        </dl>
    }
    @if (Model.Players == null || Model.Players.Count <= 5)
    {
        <div>
            <a asp-action="Index" asp-controller="PlayersOnTeams">Add a Player</a> |
        </div>
    }

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BHTeamId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
